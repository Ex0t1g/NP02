<Window x:Class="StreetClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreetClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Введите почтовый индекс:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="PostcodeTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,40,0,0" Width="150"/>
        <Button Content="Получить улицы" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0" Click="GetStreets_Click"/>
        <ListBox x:Name="StreetsListBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,120,0,0" Width="350" Height="150"/>
    </Grid>
</Window>
